;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Label +/- Offset
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

org 0

add a Label+1  ; 48 201
add a Label-1  ; 48 199
add a Label+HA ; 48 210
add a Label-HA ; 48 190



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Immediate chars
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

org 10

add a #''' ; 50 39
add a #'0' ; 50 48
add a #'A' ; 50 65
add a #'a' ; 50 97



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; DAB and comments
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

org 20

dab 1 2 3      ; 1 2 3
dab HB HC HD   ; 11 12 13
dab -1 -2 -3   ; 255 254 253

org 30

dab 'A' 'BC'   ; 65 66 67
dab [3]        ; 0 0 0
dab 'a' 'bc'   ; 97 98 99

org 40

dab ''' ';' 79 ; 39 59 79
dab '0'''0'    ; 48 39 48

; Error:
; dab ';' ;

; "Invalid label":
; add a -1 ;



org 200
Label: